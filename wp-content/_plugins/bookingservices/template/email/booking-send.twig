<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:v="urn:schemas-microsoft-com:vml" xmlns:o="urn:schemas-microsoft-com:office:office">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="x-ua-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Email</title>
</head>
<body>
<center>
    <table align="left" border="0" cellpadding="0" cellspacing="0" width="100%" id="bodyTable" style="height:100%;">
        <tr>
            <td align="left" valign="top" id="bodyCell">
                <!-- BEGIN TEMPLATE // -->
                <table align="left" border="0" cellspacing="0" cellpadding="0" width="600" style="width:600px;">
                    <tr>
                        <td align="left" valign="top" width="600" style="width:600px;">
                            <table border="0" cellpadding="0" cellspacing="0" width="100%" class="templateContainer">
                                <tr>
                                    <td colspan="2">
                                        {% if(list_of_equipment) %}
                                            <table width="100%" border="1" cellpadding="10" cellspacing="0">
                                                <thead>
                                                    <th>MãSP</th>
                                                    <th>Tên SP</th>
                                                    <th>SL</th>
                                                    <th>Hình ảnh</th>
                                                    <th>Thành tiền</th>
                                                </thead>
                                            {% for key, item in list_of_equipment %}
                                                <tr>
                                                    <td>{{ item.product.product_code }}</td>
                                                    <td>{{ item.product.product_title }}</td>
                                                    <td>{{ item.quantity | numberToFormat }}</td>
                                                    <td>
                                                        {% if( item.image ) %}
                                                            <img src="{{ item.image }}" width="100" style="display: block">
                                                        {% endif %}
                                                    </td>
                                                    <td style="text-align: right">
                                                        {% if( item.into_money ) %}
                                                            {% set _price = item.into_money * item.quantity %}
                                                            {{ _price | numberToFormat }}
                                                        {% endif %}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </table>
                                        {% endif %}
                                        {% if( note ) %}
                                            <p><strong>Ghi chú:</strong> {{ note }}</p>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">

                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</center>
</body>
</html>
